  </head>


<body>
    
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><i class="fa-solid fa-door-open"></i>Examia</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/student.html">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/add">Mark Entry</a>
              </li>
              <li class="nav-item">
                <!-- <a class="nav-link" href="#"></a> -->
                
              </li>
              <!-- <li class="nav-item">
                <a class="nav-link disabled" aria-disabled="true">Disabled</a>
              </li> -->
            </ul>
            <a href="/download-pdf" class="btn btn-primary">Download PDF</a>
          </div>
        </div>
      </nav>
      <!-- End Navbar -->
      

      <!-- Table content -->
      <div class="container">
        <div class="row my-4">
          <div class="col-lg-12">
            <% if (message) { %>
              <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
              <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
              <strong><%= message.message %></strong>
            </div>
              
            <% } %>
            <div class="table-responsive">
              <% if (users != '') { %>
                <table class="table table-striped text-center  my-3">
                  <thead>
                    <tr class="table-middle table-row-dark">

                      <th>ID</th>
                      <th>Name</th>
                      <th>EnrollmentID</th>
                      <th>Subject
                      </th>
                      <th>Marks</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach((row, index) => { %>
                      <tr class="align-middle">
                        <td><%= index %></td>
                        <td><%= row.name %></td>
                        <td><%= row.enrollmentID %></td>
                        <td><%= row.subject_name %></td>
                        <td><%= row.marks %></td>
                        <td>
                          <a href="/edit/<%= row._id %>" class="text-sucess"><i class="fa-solid fa-lg fa-pen-to-square"></i></a>
                          <a href="/delete/<%= row._id %>" class="text-danger"><i class="fa-solid fa-lg fa-trash"></i></a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              <% }else{%>
                <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
              <% } %>
              
            </div>
          </div>
        </div>
      </div>
<script>
  $(document).ready(function() {
    $("table").DataTable({order:[0,'desc']});
    
  } );
</script>

      
</body>

</html>